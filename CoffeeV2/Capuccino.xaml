<UserControl x:Class="CoffeeV2.Cappuccino"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeeV2"
             mc:Ignorable="d" 
             d:DesignHeight="58" d:DesignWidth="92">

    <Grid>
        <Rectangle Fill="{Binding Path=Background, 
                           RelativeSource= {RelativeSource Mode=FindAncestor, 
                                                           AncestorType={x:Type local:Cappuccino}}}"  Name="Rce"  HorizontalAlignment="Left" Height="58" Stroke="Black" VerticalAlignment="Top" Width="92" Margin="-1,0,-3,-1" RadiusX="15" RadiusY="15">



        </Rectangle>
        <Label Content="Cappuccino" HorizontalAlignment="Left" Margin="-4,-4,-16,0" VerticalAlignment="Top" Foreground="White" Width="112" FontFamily="MV Boli" IsEnabled="False" FontSize="17" Height="42"/>

        <Image HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="44" Margin="25,19,0,-3" Source="pngegg.png" IsEnabled="False"/>
        <Label Content="35p." HorizontalAlignment="Left" Margin="56,13,-2,0" VerticalAlignment="Top" Foreground="White" Width="38" FontFamily="MV Boli" IsEnabled="False"/>

    </Grid>
</UserControl>
