<UserControl x:Class="CoffeeV2.Tea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeeV2"
             mc:Ignorable="d" 
             d:DesignHeight="58" d:DesignWidth="92">
    <Grid>
        <Rectangle Fill="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type local:Tea}, Mode=FindAncestor}}"  Name="Rce"  HorizontalAlignment="Left" Height="58" Stroke="Black" VerticalAlignment="Top" Width="92" Margin="-1,0,0,-10" RadiusX="15" RadiusY="15">



        </Rectangle>
        <Label Content="Tea" HorizontalAlignment="Left" Margin="26,-10,-39,0" VerticalAlignment="Top" Foreground="White" Width="105" FontFamily="MV Boli" IsEnabled="False" FontSize="18"/>

        <Image HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="82" Margin="26,18,-16,0" Source="pngfind.com-tea-png-482019.png" IsEnabled="False"/>
        <Label Content="15p." HorizontalAlignment="Left" Margin="57,8,0,0" VerticalAlignment="Top" Foreground="White" Width="35" FontFamily="MV Boli" IsEnabled="False"/>

    </Grid>
    
</UserControl>
